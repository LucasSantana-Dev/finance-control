# =============================================================================
# Finance Control Application Environment Variables (Example)
# =============================================================================
# Copy this file to .env and modify the values as needed for your environment
# =============================================================================

# =============================================================================
# DOCKER-SPECIFIC CONFIGURATION
# =============================================================================
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# CONTAINER RUNTIME CONFIGURATION
# =============================================================================
JAVA_OPTS=-Xmx2g -Xms1g -XX:+UseG1GC
GRADLE_OPTS=-Dorg.gradle.console=rich -Dorg.gradle.daemon=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_URL=jdbc:postgresql://localhost
DB_PORT=5432
DB_NAME=finance_control
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Database connection pool settings
DB_POOL_INITIAL_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5
DB_POOL_MAX_LIFETIME=300000
DB_POOL_CONNECTION_TIMEOUT=20000
DB_POOL_IDLE_TIMEOUT=300000
DB_POOL_LEAK_DETECTION_THRESHOLD=60000

# =============================================================================
# JPA/HIBERNATE CONFIGURATION
# =============================================================================
JPA_DDL_AUTO=validate
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false
JPA_USE_SQL_COMMENTS=false
JPA_DEFER_DATASOURCE_INIT=false

HIBERNATE_FORMAT_SQL=false
HIBERNATE_USE_SQL_COMMENTS=false
HIBERNATE_JDBC_BATCH_SIZE=20
HIBERNATE_ORDER_INSERTS=true
HIBERNATE_ORDER_UPDATES=true
HIBERNATE_BATCH_VERSIONED_DATA=true
HIBERNATE_JDBC_FETCH_SIZE=20
HIBERNATE_DEFAULT_BATCH_FETCH_SIZE=16

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000
JWT_ISSUER=finance-control
JWT_AUDIENCE=finance-control-users

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_PORT=8080
SERVER_CONTEXT_PATH=
SERVER_SERVLET_PATH=/
SERVER_MAX_HTTP_HEADER_SIZE=8192
SERVER_MAX_HTTP_POST_SIZE=2097152
SERVER_CONNECTION_TIMEOUT=20000
SERVER_READ_TIMEOUT=30000
SERVER_WRITE_TIMEOUT=30000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOGGING_LEVEL=INFO
LOGGING_PATTERN=%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
LOGGING_FILE_PATH=logs
LOGGING_FILE_NAME=finance-control.log
LOGGING_ERROR_FILE_NAME=finance-control-error.log
LOGGING_MAX_FILE_SIZE=10485760
LOGGING_MAX_HISTORY=30
LOGGING_QUEUE_SIZE=512
LOGGING_ASYNC=true

# =============================================================================
# FLYWAY CONFIGURATION
# =============================================================================
FLYWAY_ENABLED=true
FLYWAY_LOCATIONS=classpath:db/migration
FLYWAY_BASELINE_ON_MIGRATE=false
FLYWAY_BASELINE_VERSION=0
FLYWAY_VALIDATE_ON_MIGRATE=true
FLYWAY_OUT_OF_ORDER=false
FLYWAY_CLEAN_DISABLED=true
FLYWAY_CLEAN_ON_VALIDATION_ERROR=false

# =============================================================================
# ACTUATOR CONFIGURATION
# =============================================================================
ACTUATOR_ENABLED=true
ACTUATOR_ENDPOINTS=health,info,metrics,env
ACTUATOR_BASE_PATH=/actuator
ACTUATOR_EXPOSE_HEALTH_DETAILS=true
ACTUATOR_SHOW_DETAILS=when-authorized
ACTUATOR_SHOW_COMPONENTS=when-authorized

# =============================================================================
# OPENAPI CONFIGURATION
# =============================================================================
OPENAPI_TITLE=Finance Control API
OPENAPI_DESCRIPTION=API for managing personal finances
OPENAPI_VERSION=1.0.0
OPENAPI_CONTACT_NAME=Finance Control Team
OPENAPI_CONTACT_EMAIL=support@finance-control.com
OPENAPI_CONTACT_URL=https://github.com/LucasSantana-Dev/finance-control
OPENAPI_LICENSE_NAME=MIT License
OPENAPI_LICENSE_URL=https://opensource.org/licenses/MIT
OPENAPI_SERVER_URL=http://localhost:8080
OPENAPI_SERVER_DESCRIPTION=Development server

# =============================================================================
# PAGINATION CONFIGURATION
# =============================================================================
PAGINATION_DEFAULT_PAGE_SIZE=10
PAGINATION_MAX_PAGE_SIZE=100
PAGINATION_DEFAULT_SORT=id
PAGINATION_DEFAULT_DIRECTION=ASC

# =============================================================================
# SPRING PROFILES
# =============================================================================
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# APPLICATION PORT (for Docker)
# =============================================================================
APPLICATION_PORT=8080

# =============================================================================
# DEVELOPMENT MODE
# =============================================================================
DEV_MODE=false

# =============================================================================
# POSTGRES CONFIGURATION (for Docker)
# =============================================================================
POSTGRES_DB=finance_control

# =============================================================================
# DOCKER NETWORK CONFIGURATION
# =============================================================================
DOCKER_NETWORK_NAME=finance-control-network

# =============================================================================
# SONARQUBE DATABASE CONFIGURATION
# =============================================================================
SONAR_DB_NAME=sonarqube
SONAR_DB_USER=sonarqube
SONAR_DB_PASSWORD=sonarqube